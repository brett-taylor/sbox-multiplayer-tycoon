@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using System;
@using System.Collections.Generic;

@attribute [StyleSheet("/UI/_TycoonHud.scss")]
@inherits RootPanel

<root>
    <CursorController />
    <BuildHud />
    <CompanyHud />
	<ChatBox />
    

    <WindowManager @ref=WindowManager />
</root>

@code {
	public static TycoonHud Instance { get; private set; }

	public bool ShowCursor { get; private set; }
	public WindowManager WindowManager { get; private set; }

	public TycoonHud()
	{
		Instance = this;
	}

	public override void Tick()
	{
		base.Tick();

		ShowCursor = !Input.Down(InputButton.Zoom) && !Input.Down(InputButton.SecondaryAttack);
	}
}