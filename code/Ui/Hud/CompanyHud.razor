@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using System;

@attribute [StyleSheet("/Ui/Hud/_CompanyHud.scss")]
@inherits Panel

<root>
	<div class="card">
		<div class="card-icon">
			£
		</div>
		<div class="card-right">
			@GetMoney()
		</div>
	</div>
	
	<div class="card">
		<div class="card-icon">
			CEO
		</div>
		<div class="card-right">
			@if ( IsCeo() )
			{
				<button @onclick=@( () => RelinquishCeo())>Relinquish CEO</button>
			}
			else if ( HasCeo() )
			{
				<label>@(GetCeo().Client.Name)</label>
			}
			else
			{
				<button @onclick=@( () => SetAsCeo())>Become CEO</button>
			}
		</div>
	</div>	
</root>